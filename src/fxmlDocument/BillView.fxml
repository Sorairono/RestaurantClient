<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171"
	fx:controller="controller.BillController">
	<center>
		<AnchorPane BorderPane.alignment="CENTER">
			<children>
				<TableView fx:id="tableView" prefWidth="400.0"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="25.0"
					AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="0.0">
					<columns>
						<TableColumn fx:id="productName" prefWidth="210.0"
							text="Name" />
						<TableColumn fx:id="quantity" prefWidth="50.0"
							text="Qty" />
						<TableColumn fx:id="eachPrice" prefWidth="70.0"
							text="Each" />
						<TableColumn fx:id="totalPrice" prefWidth="70.0"
							text="Total" />
					</columns>
				</TableView>
			</children>
		</AnchorPane>
	</center>
	<top>
		<AnchorPane prefHeight="75.0" BorderPane.alignment="CENTER">
			<children>
				<Label prefHeight="25.0" text="Name:"
					AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="12.5" />
				<Label fx:id="customerName" prefHeight="25.0"
					AnchorPane.leftAnchor="70.0" AnchorPane.topAnchor="12.5" />
				<Label prefHeight="25.0" prefWidth="40.0" text="Table:"
					AnchorPane.bottomAnchor="12.5" AnchorPane.leftAnchor="25.0" />
				<Label fx:id="tableNumber" prefHeight="25.0"
					AnchorPane.bottomAnchor="12.5" AnchorPane.leftAnchor="75.0" />
				<Label prefHeight="25.0" text="Time: "
					AnchorPane.bottomAnchor="12.5" AnchorPane.leftAnchor="200.0" />
				<Label fx:id="time" prefHeight="25.0"
					AnchorPane.bottomAnchor="12.5" AnchorPane.leftAnchor="235.0" />
			</children>
		</AnchorPane>
	</top>
	<bottom>
		<AnchorPane prefHeight="125.0"
			BorderPane.alignment="CENTER">
			<children>
				<Label alignment="CENTER_RIGHT" prefHeight="25.0"
					prefWidth="150.0" text="Subtotal" AnchorPane.leftAnchor="150.0"
					AnchorPane.topAnchor="0.0" />
				<Label alignment="CENTER_RIGHT" prefHeight="25.0"
					prefWidth="150.0" text="Tax" AnchorPane.leftAnchor="150.0"
					AnchorPane.topAnchor="25.0" />
				<Label alignment="CENTER_RIGHT" prefHeight="25.0"
					prefWidth="150.0" text="Total" AnchorPane.leftAnchor="150.0"
					AnchorPane.topAnchor="50.0" />
				<Label alignment="CENTER_RIGHT" prefHeight="25.0"
					prefWidth="150.0" text="Discount" AnchorPane.leftAnchor="150.0"
					AnchorPane.topAnchor="75.0" />
				<Label alignment="CENTER_RIGHT" prefHeight="25.0"
					prefWidth="150.0" text="TOTAL" AnchorPane.leftAnchor="150.0"
					AnchorPane.topAnchor="100.0" />
				<Label fx:id="subTotalLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefHeight="25.0" textAlignment="RIGHT"
					AnchorPane.rightAnchor="75.0" />
				<Label fx:id="taxLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefHeight="25.0"
					AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="25.0" />
				<Label fx:id="totalLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefHeight="25.0"
					AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="50.0" />
				<Label fx:id="discountLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefHeight="25.0" prefWidth="0.0"
					AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="75.0" />
				<Label fx:id="balanceLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefHeight="25.0"
					AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="100.0" />
			</children>
		</AnchorPane>
	</bottom>
</BorderPane>
